<title>Login</title>
<style>
    .index_column{
        width: 320px;
        min-height: 625px;
    }
    .card_spec {
        overflow: hidden;
        padding: 1rem;
        margin-bottom: 1rem;
        border-radius: 20px;
        box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.4);
        background: #fff;
    }
    .color-simpleBlue{
        color:rgba(13,110,253,0.76);
    }
    .my_btn{
        border: 2px solid rgba(13,110,253,0.1);
        background-color: rgba(13,110,253,0.76);
        position: relative;
        left: 50%;
        transform: translate(-50%, 0);
    }
</style>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<div class="index_column pt-5 m-auto" id="app">
    <div class="container_spec pt-5">
        <div class="card_spec" style="width: 18rem;">
            <form action="/login" method="post">
                <div class="m-auto">
                    <h3 class="color-simpleBlue">Username</h3>
                    <input
                            id="login-username"
                            name="loginUsername"
                            class="form-control mb-2"
                            type="text"
                            placeholder="something"
                            aria-label="default input example"
                            required/>
                    <p class="text-danger fs-5 ">{{invalidUsername}}</p>
                    <h3 class="color-simpleBlue">Password</h3>
                    <input
                            id="login-password"
                            name="loginPassword"
                            class="form-control"
                            type="password"
                            placeholder="1 or more symbols"
                            aria-label="default input example"
                            required/>
                    <p class="text-danger fs-5">{{invalidPassword}}</p>
                    <p class="text-danger fs-5">{{ifBlocked}}</p>
                    <div class="m-2"><button
                            class="my_btn btn btn-primary"
                    >log in</button></div>
                </div>
            </form>
            <div>
                <a>Don't have account?</a>
                <a href="/registration" class="stretched-link m-2" style="position: relative">Registration</a>
            </div>
        </div>
    </div>
</div>
